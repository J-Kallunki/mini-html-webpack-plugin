{
  "name": "mini-html-webpack-plugin",
  "version": "0.2.1",
  "description": "A miniature version of html-webpack-plugin with less functionality",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test": "true && npm run test:jest",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix",
    "format": "prettier --write '**/*.{js,md}'",
    "precommit": "lint-staged",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "webpack",
    "html",
    "template"
  ],
  "author": "Juho Vepsalainen",
  "license": "MIT",
  "dependencies": {
    "webpack-sources": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bebraw/mini-html-webpack-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/bebraw/mini-html-webpack-plugin/issues"
  },
  "engines": {
    "node": ">=6.9"
  },
  "devDependencies": {
    "@webpack-contrib/test-utils": "^0.1.2",
    "eslint": "^4.19.1",
    "eslint-config-tamia": "^5.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "webpack": "^4.4.1"
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
